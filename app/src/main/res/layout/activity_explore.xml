<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/root_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleGravity="top"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/city_image"
                android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:layout_height="250dp"/>
            <FrameLayout
                android:background="@drawable/trending_item_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/city_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:gravity="bottom"
                android:padding="16dp"
                android:layout_gravity="bottom"
                tools:text="Agra"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:titleTextColor="@color/white"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

<androidx.core.widget.NestedScrollView
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<androidx.cardview.widget.CardView
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".explore.ExploreActivity">
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="#DA0C0C"
        android:text="NEED GUIDES?"
        android:onClick="sendMessage"
        android:textSize="24sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:text="@string/about_city"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:layout_weight="9"
            android:layout_marginEnd="8dp"
            android:gravity="top|start"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/text_to_speech_image"
            android:src="@drawable/text_to_speech"
            android:layout_width="0dp"
            android:clickable="true"
            android:padding="1dp"
            android:focusable="true"
            android:background="?android:selectableItemBackground"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/city_description"
        android:layout_width="match_parent"
        tools:text="@string/temp"
        android:textSize="16sp"
        android:maxLines="9"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="@string/physical_artifacts"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-black"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderCircularHandlerEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="@android:color/darker_gray"
            app:sliderScrollTimeInSec="2"
            app:sliderStartAutoCycle="true" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:text="@string/practices"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-black"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/practices_card"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <ImageView
                android:id="@+id/practices_images"
                android:layout_width="match_parent"
                android:src="@drawable/trending_item_gradient"
                android:scaleType="centerCrop"
                android:layout_height="250dp"/>
            <TextView
                android:id="@+id/practices_description"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:ellipsize="end"
                android:maxLines="9"
                android:fontFamily="sans-serif-medium"
                tools:text="@string/temp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:text="@string/skills"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-black"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/skills_card"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginStart="8dp"
        android:foreground="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/skill_image"
                android:src="@drawable/trending_item_gradient"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="250dp"/>
            <TextView
                android:id="@+id/skill_description"
                android:layout_width="match_parent"
                android:maxLines="9"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:padding="8dp"
                tools:text="@string/temp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/explore_extra_item"/>
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>
</androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>